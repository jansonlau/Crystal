<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/budgetAmountImageView"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/entertainment_background"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/entertainment" />

    <TextView
        android:id="@+id/budgetAmountTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="Title"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/budgetAmountImageView"
        app:layout_constraintEnd_toStartOf="@+id/budgetAmountEditText"
        app:layout_constraintStart_toEndOf="@+id/budgetAmountImageView"
        app:layout_constraintTop_toTopOf="@+id/budgetAmountImageView" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/budgetAmountEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:background="@null"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLength="9"
        android:textAlignment="viewEnd"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        app:layout_constraintBottom_toBottomOf="@+id/budgetAmountImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/budgetAmountTitleTextView"
        app:layout_constraintTop_toTopOf="@+id/budgetAmountImageView" />
</androidx.constraintlayout.widget.ConstraintLayout>